{
    "root": true,
    "env": {
        "node": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "jquery"
    ],
    "rules": {
        "max-len": [
            "warn",
            {
                "code": 80,
                "ignoreStrings": true
            }
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ],
        "no-console": 0
    }
}
